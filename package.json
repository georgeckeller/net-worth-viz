{
  "name": "net-worth-viz",
  "version": "1.0.2",
  "description": "Net Worth Visualization Dashboard",
  "type": "module",
  "scripts": {
    "dev": "vite --port 8080 --host",
    "dev:quiet": "vite --port 8080 --host 2>&1 | grep -v 'VITE\\|ready'",
    "build": "vite build",
    "build:quiet": "vite build --logLevel error",
    "preview": "vite preview --port 8080 --host",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest --reporter=dot --watch",
    "test:coverage": "vitest run --coverage",
    "test:quiet": "vitest run --reporter=dot",
    "test:all": "npm run test:unit && cd functions && npm test",
    "test:integration": "cd functions && INTEGRATION_TESTS=true npm test -- --testPathPatterns=integration",
    "test:smoke": "bash scripts/smoke-test.sh",
    "safe-deploy": "bash scripts/test-and-deploy.sh",
    "predeploy": "npm run test:all && npm run typecheck",
    "lint": "eslint src",
    "lint:quiet": "eslint src --quiet",
    "lint:fix": "eslint src --fix --quiet",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint:quiet && npm run typecheck",
    "deploy": "npm run build:quiet && firebase deploy --only hosting:networth",
    "deploy:quiet": "npm run build:quiet 2>&1 | tail -1 && firebase deploy --only hosting:networth 2>&1 | tail -3",
    "ship": "npm run check && npm run test:quiet && npm run deploy:quiet",
    "quick": "npm run deploy:quiet"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "endOfLine": "lf"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@eslint/js": "^9.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.3.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "jsdom": "^24.1.3",
    "prettier": "^3.2.0",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^6.0.7",
    "vitest": "^1.6.1"
  }
}